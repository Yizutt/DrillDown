<!DOCTYPE table SYSTEM "../../../Development/lml.dtd">
<table>
	<image style="title" pad="80" padBottom="120" padTop="120" height="200" />
	<:row />
	<table width="500" align="top|center" defaultheight="80"
		defaultalign="center,top" defaultgrowx="true" defaultpadbottom="30">
		<textbutton row="true" id="new_game" text="@menu.new_game"
			style="main_menu_item" />

		<textbutton row="true" id="load_game" text="@menu.load_game"
			style="main_menu_item" />

		<textbutton row="true" id="select_external" text="@menu.select_external"
			style="main_menu_item" visible="false" />

		<table row="true" background="button-black">
			<volumebutton id="sfx" height="50" style="sound" expand="true"
				padLeft="100" />
			<imagebutton id="lang" height="50" style="lang" expand="true" />
			<volumebutton id="music" height="50" style="music" expand="true"
				padRight="100" />
		</table>

		<textbutton row="true" id="tutorial" text="@menu.tutorial"
			style="main_menu_item" visible="false" />

		<textbutton row="true" id="quit_game" text="@menu.quit_game"
			style="main_menu_item" />

	</table>
	<:row />
	<imagebutton id="credits" style="credits" expand="true"
		align="bottomright" padright="-16" padbottom="-16" />
</table>
