<!DOCTYPE table SYSTEM "../../../Development/lml.dtd">
<:noop>
	<image id="overlay" style="pixel" width="{UI_W}" height="{UI_H}"
		color="invis" visible="false" touchable="enabled" />
	<:calculate key="w" value="{UI_W}+40" />
	<:calculate key="h" value="{UI_H}/3*2-40" />
	<scrollpane id="saves" scrollingdisabledx="true"
		scrollingdisabledy="false" width="{w}" height="{h}" visible="false">
		<verticalgroup id="saves_cont" touchable="enabled" padleft="16"
			width="{w}" height="{h}" groupalign="topleft" groupspace="10" />
	</scrollpane>
	<image id="modal_overlay" style="pixel" width="{UI_W}" height="{UI_H}"
		color="invis" visible="false" touchable="enabled" />
</:noop>